
@{
    ViewData["Title"] = "PersonelUyelikAyarlari";
    Layout = "~/Areas/ManagerArea/Views/Shared/_ManagerLayout.cshtml";
}


<h2>Personel Üyelik Ayarları</h2>
<head>
    <style>
        .btn1 {
            margin-left: 900px;
        }
    </style>
</head>

@* Manager/hesabiPasifeAl/id => id managerID ait olacak. Yönetici sisteme login olduğunda yöneticinin id'si buraya yazılacak.
    login işlemi yapılmadı için id dinamik gelmiyor.*@
<div>
    <a asp-controller="Personnel" asp-action="hesabiPasifeAl" id="personelpasif" class="btn btn-success btn1">Hesabı Pasife Alma</a>

</div>

@*<div class="alert alert-primary" role="alert">
        @ViewData["mesaj"]
    </div>*@
<script type="text/javascript">
    $(function () {

        $("#personelpasif").click(function () {

            toastr.success("Personel  hesabınız pasif hale geçmiştir.", "Toastr");
            toastr.options = {
                "timeOut":"8000",
                "showDuration": "8000",
                "hideDuration": "8000",
                "progressBar": true
            }
        });
    });
</script>


