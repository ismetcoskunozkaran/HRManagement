@model IEnumerable<HRProject_NTier.CORE.ViewModels.PersonelVm>

@{
    ViewData["Title"] = "ListPersonels";
    Layout = "~/Areas/ManagerArea/Views/Shared/_ManagerLayout.cshtml";
}





<h2>ListPersonels</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MailAddress)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HiredDate)
            </th>
            <th>



            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@item.ProfileImage" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MailAddress)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)

                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HiredDate)
                </td>





                <td>
                    <a asp-action="ListPersonels" asp-route-id="@item.ID"> Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.ID"> Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID"> Sil</a> |
                    <a asp-action="ListPersonnelPermissions" asp-route-id="@item.ID"> İzin Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
