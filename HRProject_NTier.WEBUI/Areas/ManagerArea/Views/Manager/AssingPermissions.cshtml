


@model IEnumerable<HRProject_NTier.CORE.Entities.Personnel>
@{
    IEnumerable<HRProject_NTier.CORE.Entities.Permission> Permissions = ViewData[("PermissionTypes")] as IEnumerable<HRProject_NTier.CORE.Entities.Permission>;

}
@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <link rel="stylesheet" type="text/css" href="DataTables/datatables.min.css" />
    <script type="text/javascript" src="DataTables/datatables.min.js"></script>

    <title>Makale Listeleme Sayfası</title>


</head>

<h1 style="margin-left:200px"><b>İzin Atama</b></h1>

<body>

    <div class="container mb-3 mt-3">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <form asp-controller="Manager" asp-action="AssinsPermissions" method="post" enctype="multipart/form-data">
                <label for="">İzin Seç:</label>
                <select name="ID" id="PermissionTypes">
                    @foreach (var item in Permissions)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }

                </select><br><br>
                <table class="table table-striped table-bordered" id="table_id">
                    <thead>
                        <tr>
                            <th>Profil</th>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Telephone</th>
                            <th>E-mail</th>
                            <th>Departman</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td><a asp-controller="" asp-action="" asp-route-id=""><img src="" width="270" height="170" alt="Profil" />Resim</a></td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Telephone</td>
                                <td>@item.MailAddress</td>
                                <td>@item.Department</td>


                                <td><a asp-action="DisApprovePermission" asp-controller="Manager" asp-route-id="" class="btn btn-outline-danger">✖️</a></td>
                                <td><a asp-action="ApprovedPermission" asp-controller="Manager" class="btn btn-outline-success">✔️</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </form>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({

                "pagingType": "full_numbers",
                /* order:[[3,'desc']],*/
            });
        });
    </script>
</body>


