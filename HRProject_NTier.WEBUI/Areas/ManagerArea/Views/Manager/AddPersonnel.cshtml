@model HRProject_NTier.CORE.ViewModels.InsertPersonnelVM

@{
    ViewData["Title"] = "AddPersonnel";
    Layout = "~/Areas/ManagerArea/Views/Shared/_ManagerLayout.cshtml";
}




<form asp-action="AddPersonnel" enctype="multipart/form-data" method="post" style="margin-left:70px;">
    <h2>Personel Ekle</h2>
    <hr />
    <div class="row">
        <div>

            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MailAddress" class="control-label"> Mail Adresi</label>
                    <input asp-for="MailAddress" class="form-control" />
                    <span asp-validation-for="MailAddress" class="text-danger"></span>
                </div>

                <div class="form-group d-none">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label">Şirket Adı</label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Department" class="control-label">Departman</label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Resim Yükleyin</label>
                    <input type="file" name="ProfileImageFile" asp-for="ProfileImageFile" class="form-control" accept=".jpg,.png,.gif,.jpeg" />
                    <span asp-validation-for="ProfileImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <label>Personel Mail </label>
                <textarea asp-for="PersonnelMailBody" name="PersonnelMailBody" id="editor1" rows="10" cols="80">
                
            </textarea>
                <script>
                    // Replace the <textarea id="editor1"> with a CKEditor 4
                    // instance, using default configuration.
                    CKEDITOR.replace('PersonnelMailBody');
                </script>
            </div>

            <div class="form-group col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
                <br />
                <input id="addpersonnel" type="submit" value="Kaydet" class="btn btn-default" />
            </div>

        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</form>
<script type="text/javascript">


    $(function () {

        $("#addpersonnel").click(function () {

            toastr.success("Peronel Ekleme işlemi başarılı...", "Toastr");
            toastr.options = {
                "timeOut": "5000",
                "showDuration": "5000",
                "hideDuration": "5000",
                "progressBar": true
            }
        });
    });
</script>

